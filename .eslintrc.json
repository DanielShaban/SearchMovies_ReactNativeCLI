{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks"
        // "eslint:recommended"
        // "plugin:react/recommended"
        // "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "prettier"
    ],
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-tabs": "error",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "no-use-before-define": "off",
        "react/display-name": "off",
        "react/prop-types": "off",
        "react-hooks/rules-of-hooks": "error",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react-hooks/exhaustive-deps": "warn",
        "no-mixed-spaces-and-tabs": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}